{
  "$id": "licence.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "An Urban Licence",
  "type": "object",
  "properties": {
    "@type": {
      "type": "string",
      "enum": [
        "BuildLicence",
        "CODT_BuildLicence",
        "Article127",
        "CODT_Article127",
        "IntegratedLicence",
        "CODT_IntegratedLicence",
        "UniqueLicence",
        "CODT_UniqueLicence",
        "Declaration",
        "UrbanCertificateOne",
        "CODT_UrbanCertificateOne",
        "UrbanCertificateTwo",
        "CODT_UrbanCertificateTwo",
        "PreliminaryNotice",
        "EnvClassOne",
        "EnvClassTwo",
        "EnvClassThree",
        "ParcelOutLicence",
        "CODT_ParcelOutLicence",
        "MiscDemand",
        "NotaryLetter",
        "CODT_NotaryLetter",
        "Inspection",
        "Ticket",
        "Division",
        "ProjectMeeting",
        "CODT_CommercialLicence",
        "ExplosivesPossession",
        "PatrimonyCertificate"
      ]
    },
    "reference": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "licenceSubject": {
      "type": "string"
    },
    "description": {
      "type": "object",
      "properties": {
        "content-type": {
          "type": "string"
        },
        "data": {
          "type": "string"
        }
      },
      "required": [
        "content-type",
        "data"
      ]
    },
    "solicitOpinionsTo": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "wf_transitions": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "workLocations": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "number": {
            "type": "string"
          },
          "street": {
            "type": "string",
            "pattern": "^[0-9a-f]{32}$"
          }
        },
        "additionalProperties": false,
        "required": [
          "street"
        ]
      }
    },
    "architects": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string"
      }
    },
    "notaryContact": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string"
      }
    },
    "foldermanagers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[0-9a-f]{32}$"
      }
    },
    "usage": {
      "type": "string",
      "enum": [
        "for_habitation",
        "not_for_habitation",
        "not_applicable"
      ]
    },
    "validityDelay": {
      "type": "number"
    },
    "__children__": {
      "type": "array",
      "minItems": 0,
      "items": {
        "oneOf": [
          {"$ref": "#/definitions/urbanAttachment"},
          {"$ref": "#/definitions/urbanParcel"},
          {"$ref": "#/definitions/urbanEvent"},
          {"$ref": "#/definitions/urbanApplicant"}
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "@type",
    "reference",
    "title",
    "workLocations",
    "foldermanagers"
  ],
  "if": {
    "properties": {
      "@type": {
        "enum": [
          "UniqueLicence",
          "CODT_UniqueLicence",
          "CODT_IntegratedLicence",
          "CODT_CommercialLicence",
          "CODT_Article127",
          "CODT_BuildLicence",
          "RoadDecree",
          "CODT_UrbanCertificateTwo",
          "CODT_ParcelOutLicence",
          "UrbanCertificateTwo",
          "Article127",
          "BuildLicence",
          "IntegratedLicence",
          "ParcelOutLicence"
        ]
      }
    }
  },
  "then": {
    "properties": {
      "usage": {
        "type": "string",
        "enum": [
          "for_habitation",
          "not_for_habitation",
          "not_applicable"
        ]
      }
    },
    "required": [
      "@type",
      "reference",
      "title",
      "workLocations",
      "foldermanagers",
      "usage"
    ]
  },
  "definitions": {
    "urbanAttachment": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": [
            "File"
          ]
        },
        "title": {
          "type": "string"
        },
        "file": {
          "type": "object",
          "properties": {
            "data": {
              "type": "string"
            },
            "encoding": {
              "type": "string",
              "enum": [
                "base64"
              ]
            },
            "filename": {
              "type": "string"
            },
            "content-type": {
              "type": "string"
            }
          },
          "required": [
            "data",
            "encoding",
            "filename",
            "content-type"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "@type",
        "title",
        "file"
      ]
    },
    "urbanParcel": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": [
            "Parcel"
          ]
        },
        "id": {
          "type": "string"
        },
        "division": {
          "type": "string"
        },
        "section": {
          "type": "string"
        },
        "radical": {
          "type": "string"
        },
        "bis": {
          "type": "string"
        },
        "exposant": {
          "type": "string"
        },
        "puissance": {
          "type": "string"
        },
        "partie": {
          "type": "boolean"
        },
        "isOfficialParcel": {
          "type": "boolean"
        },
        "outdated": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "@type"
      ]
    },
    "urbanEvent": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": [
            "UrbanEvent",
            "UrbanEventOpinionRequest"
          ]
        },
        "title": {
          "type": "string"
        },
        "depositType": {
          "type": "string",
          "enum": [
            "recommande",
            "surplace",
            "par-courrier-recommande-avec-accuse-de-reception",
            "depose-a-ladministration-communale-contre-recepisse",
            "decision"
          ]
        },
        "eventDate": {
          "type": "string",
          "regex": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\+[0-9]{2}:[0-9]{2}"
        },
        "decisionDate": {
          "type": "string",
          "regex": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\+[0-9]{2}:[0-9]{2}"
        },
        "decision": {
          "type": "string"
        },
        "urbaneventtypes": {
          "type": "string",
          "pattern": "^(?:[0-9a-f]{32})|(?:[0-9a-fA-F]{8}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{4}\b-[0-9a-fA-F]{12})$"
        },
        "validityEndDate": {
          "type": "string",
          "regex": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\+[0-9]{2}:[0-9]{2}"
        },
        "externalDecision": {
          "type": "string",
          "enum": [
            "favorable-defaut",
            "favorable",
            "defavorable",
            "favorable-conditionnel"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "@type",
        "urbaneventtypes",
        "title"
      ]
    },
    "urbanApplicant": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "enum": [
            "Applicant",
            "Corporation",
            "Proprietary"
          ]
        },
        "title": {
          "type": "string"
        },
        "name1": {
          "type": "string"
        },
        "name2": {
          "type": "string"
        },
        "legalForm": {
          "type": "string"
        },
        "personTitle": {
          "type": "string",
          "enum": [
              "notitle",
              "madam",
              "miss",
              "mister",
              "madam_and_mister",
              "master",
              "masters",
              "misters",
              "ladies",
              "consorts",
              "mesdemoiselles",
              "mesdames-et-messieurs",
              "mademoiselle-et-monsieur",
              "madam_or_mister"
          ]
        },
        "country": {
          "type": "string",
          "enum": [
            "germany",
            "belgium",
            "france",
            "luxembourg",
            "netherlands"
          ]
        },
        "city": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "zipcode": {
          "type": ["string", "number"]
        },
        "society": {
          "type": "string"
        },
        "fax": {
          "type": "string"
        },
        "gsm": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "@type",
        "name1"
      ]
    }
  }
}
